<%= brain_form_for(@playlist) do |f| %>

  	<% if @playlist.errors.any? %>
	  <div class="nNote nFailure hideit">
		  	<% @playlist.errors.full_messages.each do |msg| %>
		    <p><%= msg %></p>
		  	<% end %>
	  </div>
	<%end%>

    <%= f.text_field :title %>
    <%= f.text_area :description %>
    <%= f.submit "Add your playlist"%>
<% end %>
