<h1>Listing current downloads</h1>

<table class="table">
  <tr>
    <th>Url</th>
    <th>Name</th>
    <th>Finished at</th>
    <th></th>
    <th></th>
  </tr>

<% @downloads.each do |download| %>
  <tr>
    <td><%= download.url %></td>
    <td><%= download.name %></td>
    <td><%= download.finished_at %></td>
    <td><%= link_to 'Show', download , :class => "btn btn-primary"%></td>
    <td><%= link_to 'Destroy', download, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%></td>
  </tr>
<% end %>
</table>

<br />

