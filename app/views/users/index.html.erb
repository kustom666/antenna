<h1>Registered Alpha testers!</h1>

<table>
  <tr>
    <th>Nickname</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <% if current_user && (current_user == user || current_user.admin)%>
      <td><%= link_to 'Show', user, :class => "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-primary" %></td>
    <%end%>
    <% if current_user && current_user.admin%>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    <%end%>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path , :class => "btn btn-primary"%>
