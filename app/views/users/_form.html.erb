<%= brain_form_for(@user, builder: BrainFormBuilder) do |f| %>
    <% if @user.errors.any? %>
      <%= f.alert %>
    <% end %>

      <%= f.text_field :nickname %>
      <%= f.text_field :email%>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.password_field :desired_ftp_pass %>

    <% if current_user && current_user.admin %>
        <%= f.check_box :admin %>
        <%= f.check_box :paying %>
    <%end%>

    <%= f.submit "Create your account"%>
<% end %>
