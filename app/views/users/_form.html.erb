<%= bootstrap_form_for(@user, html: { class: 'form-horizontal' }, help: :block) do |f| %>
  <% if @user.errors.any? %>
    <%= f.alert_message "Please fix the errors below." %>
  <% end %>

  <div class="field">
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.text_field :email%>
  </div>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.password_field :desired_ftp_pass %>
  </div>

  <% if current_user && current_user.admin %>
    <div class="field">
      <%= f.check_box :admin %>
    </div>
  <%end%>

  <div class="actions">
    <%= f.primary "Create your account"%>
  </div>
<% end %>
