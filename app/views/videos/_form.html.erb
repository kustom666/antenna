<%= bootstrap_form_for(@video, html: { class: 'form-horizontal' }, help: :block) do |f| %>
  <% if @video.errors.any? %>
    <%= f.alert_message "Please fix the errors below." %>
  <% end %>

    <%= f.select(:name, @files) %>
    <%= f.collection_select(:playlist_id, Playlist.where(:user_id => current_user), :id, :title)%>
  <%= f.actions do %>
    <%= f.primary "Add a video"%>
  <% end %>
<% end %>
