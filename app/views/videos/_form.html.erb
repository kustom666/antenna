<%= brain_form_for(@video) do |f| %>
  	<% if @video.errors.any? %>
	  <div class="nNote nFailure hideit">
		  	<% @video.errors.full_messages.each do |msg| %>
		    <p><%= msg %></p>
		  	<% end %>
	  </div>
	<%end%>
    <%= f.select(:name, @files) %>
    <%= f.collection_select(:playlist_id, Playlist.where(:user_id => current_user), :id, :title)%>
    <%= f.number_field :number %>
    <%= f.submit "Add a video"%>

<% end %>
